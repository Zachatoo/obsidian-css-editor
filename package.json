		"eslint-plugin-wdio": "^9.16.2",
		"globals": "^16.3.0",
		"mocha": "^11.7.5",
		"obsidian": "^1.11.0",
		"prettier": "^3.6.2",
		"tslib": "2.4.0",
		"typescript": "^4.9.5",
		"typescript-eslint": "^8.42.0",
		"wdio-obsidian-reporter": "^2.1.6",
		"wdio-obsidian-service": "^2.1.6"
	},
	"dependencies": {
		"@codemirror/autocomplete": "^6.8.1",
